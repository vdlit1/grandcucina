<?xml version="1.0"?>
<config>
    <tabs>
        <ahtextension translate="label" module="optionimages">
            <label>Itech Extensions</label>
            <sort_order>2</sort_order>
        </ahtextension>
    </tabs>
    <sections>
        <aht_optionimages translate="label" module="optionimages">
            <label>Option Images</label>
            <tab>ahtextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>12</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Active Option Images</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled_images translate="label">
                            <label>Enable/Disable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_images>
                    </fields>
                </general>
                <custom>
                    <label>Select Attribute For Option Images</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>13</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <attribute translate="label">
                            <label>Choose Attribute</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>optionimages/adminhtml_system_config_source_attribute</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </attribute>
                    </fields>
                </custom>
            </groups>
        </aht_optionimages>
    </sections>
</config>
